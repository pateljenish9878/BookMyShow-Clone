<!DOCTYPE html>
<html lang="en">
<%- include('../partials/admin/header.ejs') %>
<body>
    <%- include('../partials/admin/navbar.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/admin/sidebar.ejs', { path: '/admin/languages' }) %>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Edit Language</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/languages" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Languages
                        </a>
                    </div>
                </div>
                
                <% if (locals.errors && errors.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/languages/<%= language._id %>?_method=PUT" method="POST">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Language Name*</label>
                                        <input type="text" class="form-control" id="name" name="name" value="<%= language.name %>" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="code" class="form-label">Language Code*</label>
                                        <input type="text" class="form-control" id="code" name="code" placeholder="e.g. EN, HI, TA" value="<%= language.code %>" required>
                                        <div class="form-text">Usually a 2-letter code (ISO 639-1)</div>
                                    </div>
                                    
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="status" name="status" value="true" <%= language.status ? 'checked' : '' %>>
                                        <label class="form-check-label" for="status">Active</label>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save"></i> Update Language
                                        </button>
                                        <a href="/admin/languages" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <%- include('../partials/admin/footer.ejs') %>
</body>
</html> 