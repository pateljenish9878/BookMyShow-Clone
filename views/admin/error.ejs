<!DOCTYPE html>
<html lang="en">
<%- include('../partials/admin/header.ejs') %>
<body>
    <%- include('../partials/admin/navbar.ejs') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/admin/sidebar.ejs', { path: '', query: locals.query || {} }) %>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Error</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="javascript:history.back()" class="btn btn-sm btn-secondary">
                            <i class="fas fa-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
                
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Something went wrong!</h4>
                    <p><%= typeof error === 'string' ? error : 'An unexpected error occurred.' %></p>
                    <hr>
                    <p class="mb-0">Please try again or contact the administrator if the issue persists.</p>
                </div>
                
                <div class="mt-4">
                    <a href="/admin/dashboard" class="btn btn-primary">
                        <i class="fas fa-home"></i> Back to Dashboard
                    </a>
                </div>
            </main>
        </div>
    </div>
    <%- include('../partials/admin/footer.ejs') %>
</body>
</html> 