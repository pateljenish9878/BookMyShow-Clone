        <div class="footer-container">
            <div class="footer-logo">
                <div class="line"></div>
                <div><img src="/images/footer-logo.svg" alt="BookMyShow Logo"></div>
                <div class="line"></div>
            </div>
            <div class="social-icons-strip">
