<%- include('../header') -%>

<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h2 class="mb-0"><i class="fas fa-exclamation-circle mr-2"></i> Payment Failed</h2>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <i class="fas fa-times-circle text-danger" style="font-size: 80px;"></i>
          </div>
          
          <h3 class="text-center mb-4">We couldn't process your payment</h3>
          
          <p class="lead text-center"><%= message %></p>
          
          <div class="alert alert-secondary mt-4">
            <p class="mb-0">Please try the following:</p>
            <ul class="mt-2">
              <li>Check your payment details and try again</li>
              <li>Use a different payment method</li>
              <li>Contact your bank if the problem persists</li>
            </ul>
          </div>
          
          <div class="text-center mt-4">
            <a href="/" class="btn btn-primary me-2">Return to Home</a>
            <a href="/movies" class="btn btn-secondary">Browse Movies</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../footer') -%> 